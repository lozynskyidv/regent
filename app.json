{
  "expo": {
    "name": "Regent",
    "slug": "regent",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FAFAFA"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.regent.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Regent uses Face ID to securely access your financial data.",
        "UIRequiresFullScreen": true,
        "UIStatusBarStyle": "UIStatusBarStyleLightContent"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FAFAFA"
      },
      "package": "com.regent.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Regent uses Face ID to securely access your financial data."
        }
      ]
    ],
    "scheme": "regent",
    "extra": {
      "router": {
        "origin": false
      }
    }
  }
}
